<% layout('\\layouts\\boilerplate.ejs') -%>

    <body>

        <div class="grantparent-div-form">

            <div class="parent-div-form">
                <h2>Create a New Listing</h2>


                <form action="/listings" class="needs-validation" method="post" novalidate
                    enctype="multipart/form-data">

                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="listing[title]"
                            placeholder="Enter Name of Listing" required>
                        <div class="valid-feedback">
                            acceptable
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid title
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" class="form-control" id="description" name="listing[description]"
                            placeholder="Enter description" required></textarea>
                        <div class="valid-feedback">
                            acceptable
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid Description
                        </div>
                    </div>

                    <!-- <div class="mb-2">
                    <label for="url" class="form-label">Image Url</label>
                    <input type="text" class="form-control" id="url" name="listing[image][url]" placeholder="Enter Image/URL link" required>
                    <div class="valid-feedback">
                        acceptable
                    </div>
                    <div class="invalid-feedback">
                        Please enter valid imgurl
                    </div>
                </div>   -->

                    <div class="mb-2">
                        <label for="url" class="form-label">Upload Listing Image</label>
                        <input type="file" class="form-control" id="url" name="listing[image]"
                            placeholder="Enter Image/URL link" required>
                        <div class="valid-feedback">
                            acceptable
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid imgurl
                        </div>
                    </div>

                    <div class="mb-2 ">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" class="form-control" id="price" name="listing[price]" placeholder="1234"
                            required>
                        <div class="valid-feedback">
                            acceptable
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid price
                        </div>
                    </div>

                    <div class="mb-2 ">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="location" name="listing[location]"
                            placeholder="Enter a location" required>
                        <div class="valid-feedback">
                            acceptable
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid location
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" name="listing[country]"
                            placeholder="Enter a country" required>
                        <div class="valid-feedback">
                            acceptable
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid country
                        </div>
                    </div>

                    <div class="form-submit-reset">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <button type="reset" class="btn btn-primary reset">Reset</button>
                    </div>

                </form>
            </div>
        </div>
       
    </body>